{
    "compilerOptions": {
      "target": "ES2022",
      "module": "Node16",
      "moduleResolution": "Node16",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["@jest/globals"],
      "isolatedModules": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/**/*.test.ts"]
  }